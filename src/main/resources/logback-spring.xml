<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 콘솔 로그 유지 -->
    <springProfile name="default">
        <include resource="org/springframework/boot/logging/logback/base.xml"/>
    </springProfile>

    <!-- 기본 파일 로그 (선택사항) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ✅ 광고 도메인 전용 로그 (노출/클릭 등) -->
    <appender name="AD_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/ad-log.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/ad-log.%d{yyyy-MM-dd_HH}.log</fileNamePattern>
            <maxHistory>14</maxHistory> <!-- 최근 14일만 보관 -->
        </rollingPolicy>
        <encoder>
            <!-- 광고 로그는 가독성보다 정형성이 중요하므로 msg만 기록 -->
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- ✅ AdLogger 로거 설정 -->
    <logger name="AdLogger"
            level="INFO"
            additivity="false">
        <appender-ref ref="AD_LOG"/>
    </logger>

    <!-- Root logger: 콘솔만 사용 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <!-- 필요 시 아래 주석 해제 -->
        <!-- <appender-ref ref="FILE" /> -->
    </root>

</configuration>
